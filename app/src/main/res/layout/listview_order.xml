<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/item_order_linear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintDimensionRatio="3:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_order_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <TextView
            android:text="주문번호 : 10"
            android:id="@+id/item_order_no"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="center_vertical"/>
        <TextView
            android:text="주문시각 : 12:07"
            android:id="@+id/item_order_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="center_vertical"/>
        <TextView
            android:text="주문내역 : 아이스아메리카노 외 2개"
            android:id="@+id/item_order_data"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="center_vertical" />
    </LinearLayout>

    <Button
        android:id="@+id/item_order_btn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="접수"
        android:layout_marginRight="20dp"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_order_linear"
        app:layout_constraintBottom_toBottomOf="@id/item_order_linear"/>
</android.support.constraint.ConstraintLayout>
